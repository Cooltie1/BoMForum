@{
}
@model DetailsPage


<div class="d-flex justify-content-between align-items-center">
    <div>
        <h1>@Model.UserPost.UserPostTitle</h1>
    </div>
    <div>
        <h3><span class="badge badge-success font-weight-normal">@Model.UserPost.Tag.TagText</span></h3>
    </div>
</div>
<hr />
<div class="mx-4">
    <p>@Model.UserPost.UserPostText</p>
</div>
<br />
<h3>Comments</h3>

@foreach (Comment comment in Model.Comments)
{
<p><span class="badge badge-secondary font-weight-normal">@comment.CommentDate</span> @comment.CommentText</p>
}

<a class="btn btn-outline-success" asp-controller="Home" asp-action="NewComment" asp-route-postid="@Model.UserPost.UserPostID">New Comment</a>
